<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#7CB342">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/setting"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:background="#dfdfdf"
        android:gravity="center"
        android:text="소비기한 임박상품  0"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="58dp" />
    <TextView
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:background="#dfdfdf"
        android:gravity="center"
        android:text="소비기한 만료상품  0"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_search"
        android:layout_marginHorizontal="10dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="109dp"
        android:drawableStart="@drawable/search"
        android:hint="  요리, 재료 검색"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_circle_layout_background_gray"
        android:layout_marginTop="160dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="389dp"
                android:layout_height="343dp"
                android:background="@drawable/rectangle_circle_layout"
                android:backgroundTint="#d9d9d9"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:textColor="#8e24aa"
                    android:text="■Ai 추천요리"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="369dp"
                    android:layout_height="97dp"
                    android:background="@drawable/rectangle_circle_layout"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="28dp">


                    <ImageView
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:background="@drawable/rectangle_circle_shape_greenline"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="10dp" />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="105dp"
                        android:layout_marginRight="20dp"
                        android:background="#7cb342"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="45dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="삼겹살"
                        android:textSize="19dp"
                        tools:layout_editor_absoluteX="105dp"
                        tools:layout_editor_absoluteY="20dp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="재료: 앞다리살, 다진마늘, 고추장, 설탕, 양파, 대파"
                        tools:layout_editor_absoluteX="105dp"
                        tools:layout_editor_absoluteY="45dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="369dp"
                    android:layout_height="97dp"
                    android:background="@drawable/rectangle_circle_layout"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="141dp">


                    <ImageView
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:background="@drawable/rectangle_circle_shape_greenline"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="10dp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="105dp"
                        android:layout_marginRight="20dp"
                        android:background="#7cb342"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="45dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="삼겹살"
                        android:textSize="19dp"
                        tools:layout_editor_absoluteX="105dp"
                        tools:layout_editor_absoluteY="20dp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="재료: 앞다리살, 다진마늘, 고추장, 설탕, 양파, 대파"
                        tools:layout_editor_absoluteX="105dp"
                        tools:layout_editor_absoluteY="45dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/add_circle_green"
        android:tint="#7cb342"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="620dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@android:id/tabcontent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/store_fragment_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tab1">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tab2">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tab3">

        </com.google.android.material.tabs.TabItem>

    </com.google.android.material.tabs.TabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>